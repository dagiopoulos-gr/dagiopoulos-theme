{% assign enableStructuredDataForRealStore = true %}
{% if enableStructuredDataForRealStore == true %}
<!--JSON-LD data generated by Smart SEO-->
<script type="application/ld+json">
    {%- capture lat %}37.0422371{% endcapture %}{% capture lng %}22.1141264{% endcapture %}{% capture locUrl %}https://www.google.com/maps/@37.0422371,22.1141264,16z{% endcapture %}{% capture logo %}https://smart-seo-new-api.sherpas.design/files/232{% endcapture %}{% capture socialMediaLinks %}"https://www.facebook.com/PaintPlusNtagiopoulos/","https://www.instagram.com/nikosntagiopoulos/","https://www.youtube.com/channel/UCvQWWkQOeN8gGD-PKooxaFQ/featured?view_as=subscriber","https://gr.pinterest.com/ntagiopoulos/"{% endcapture %}{% capture disableStoreAddress %}false{% endcapture %}
    {
        "@context": "https://schema.org",
        "@type": "Store",
        "name": "{{ shop.name }}",
        "url": "{{ shop.url }}",
        "description": "{{ shop.description }}",
        {%- if logo != blank %}
        "logo": "{{ logo }}",
        {%- endif %}
        {%- if logo != blank %}
        "image": "{{ logo }}",
        {%- endif %}
        {%- if socialMediaLinks != blank %}
        "sameAs": [{{ socialMediaLinks }}],
        {%- endif %}
        {%- if locUrl != blank %}
        "hasMap": "{{ locUrl }}",
        {%- endif %}
        {%- if disableStoreAddress != "true" %}
        "address": {
            "@type": "PostalAddress",
            {% if shop.address.street != blank %}"streetAddress": "{{ shop.address.street | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.city != blank %}"addressLocality": "{{ shop.address.city | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.province != blank %}"addressRegion": "{{ shop.address.province | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.zip != blank %}"postalCode": "{{ shop.address.zip | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}",{% endif %}
            {% if shop.address.country != blank %}"addressCountry": "{{ shop.address.country | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}"{% endif %}
        },
        {%- endif %}
        "priceRange": "$$"{%- if shop.address.phone != blank %},
        "telephone": "{{ shop.address.phone | strip_newlines | strip_html | escape_once | replace: '\', '\\\\' }}"{% endif %}{%- if lat != blank and lng != blank %},
        "geo": {
            "@type": "GeoCoordinates",
            "latitude": {{ lat }},
            "longitude": {{ lng }}
        }{% endif %}
    }
</script>
